@model ECommerceASP.Models.Product
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Créer un produit";
    var categories = ViewBag.Categories as List<SelectListItem>;
}

<h2>Créer un produit</h2>

<form asp-action="CreateProduct" method="post">
    <div class="form-group">
        <label asp-for="Name">Nom du produit</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Prix du produit</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Catégorie</label>
        <select asp-for="CategoryId" asp-items="categories" class="form-control">
            <option value="">-- Sélectionner une catégorie --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="mt-2">
        <button type="submit" class="btn btn-primary">Créer</button>
    </div>
</form>

<div class="mt-3">
    <a class="text-body" asp-controller="Product" asp-action="ListeProduct">Retour à la liste des produits</a>
</div>
